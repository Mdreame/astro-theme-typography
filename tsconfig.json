{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "strict": false,
    "noImplicitAny": true,
  },
  "include": [
    "src/**/*.astro",
    "src/**/*.ts",
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": ["dist"]
}
